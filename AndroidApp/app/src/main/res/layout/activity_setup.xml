<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/direct_connection_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/directText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter Camera's IP here!"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/direct_ip_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/direct_ip_text_2"
            app:layout_constraintTop_toBottomOf="@id/directText" />

        <EditText
            android:id="@+id/direct_ip_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/direct_ip_text_1"
            app:layout_constraintRight_toLeftOf="@id/direct_ip_text_3"
            app:layout_constraintTop_toBottomOf="@id/directText" />

        <EditText
            android:id="@+id/direct_ip_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/direct_ip_text_2"
            app:layout_constraintRight_toLeftOf="@id/direct_ip_text_4"
            app:layout_constraintTop_toBottomOf="@id/directText" />

        <EditText
            android:id="@+id/direct_ip_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/direct_ip_text_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/directText" />

        <EditText
            android:id="@+id/direct_port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8081"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/direct_ip_text_4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/direct_connection_button"
            android:layout_width="271dp"
            android:layout_height="116dp"
            android:layout_marginBottom="8dp"
            android:text="START DIRECT CONNECTION"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/service_connection_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <TextView
            android:id="@+id/serviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter Camera Service's IP here"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/service_ip_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/service_ip_text_2"
            app:layout_constraintTop_toBottomOf="@id/serviceText" />

        <EditText
            android:id="@+id/service_ip_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/service_ip_text_1"
            app:layout_constraintRight_toLeftOf="@id/service_ip_text_3"
            app:layout_constraintTop_toBottomOf="@id/serviceText" />

        <EditText
            android:id="@+id/service_ip_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/service_ip_text_2"
            app:layout_constraintRight_toLeftOf="@id/service_ip_text_4"
            app:layout_constraintTop_toBottomOf="@id/serviceText" />

        <EditText
            android:id="@+id/service_ip_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="40sp"
            app:layout_constraintLeft_toRightOf="@id/service_ip_text_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serviceText" />

        <EditText
            android:id="@+id/service_port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_ip_text_4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/camera_service_button"
            android:layout_width="271dp"
            android:layout_height="116dp"
            android:layout_marginBottom="20dp"
            android:text="CONNECT TO CAMERA SERVICE"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>